@model BusStationIS.Models.Carrier.CarrierInputModel;
@{
    ViewData["Title"] = "Edit";
}



<div class="container">
    <div class="page-header clearfix datailHeading">
        <h2 class="text-info">Edit Carrier</h2>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-8">
        @if (TempData["msg"] != null)
        {
            <br />
            <div id="containerInfo">
                <p>
                    @TempData["msg"]
                </p>

            </div>
            <br />

        }
        <div class="border">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="container" style="padding:30px;background-color:lightskyblue;">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="Name"></label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>City Name:</label>
                            </div>
                            <div class="col-sm-4">
                                <select asp-for="CityName" class="form-group selcls">
                                    @foreach (var city in Model.Cities)
                                    {
                                        <option>@city.Name</option>
                                    }
                                </select>
                            </div>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="StreetName"></label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="StreetName" class="form-control" />
                            </div>
                            <span asp-validation-for="StreetName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="StreetNumber"></label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="StreetNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="StreetNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2">
                                <input type="submit" value="Submit" class="btn btn-primary form-control" />
                            </div>
                            <div class="col-sm-2">
                                <a asp-controller="Carrier" asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




